@model Dictionary<ToonSquad,List<PlayerStats>>

@foreach(ToonSquad team in Model.Keys)
{
   
<h4>Team #: @team.Id</h4>
    <table class="table table-hover table-info" style="table-layout:fixed">
        <tr>
            <th>Player</th>
            <th>Points Per Game</th>
            <th>Assists Per Game</th>
            <th>Rebounds Per Game</th>
            <th>Blocks Per Game</th>
            <th>Steals Per Game</th>
        </tr>
        @for(int i=0; i<Model[team].Count; i++)
        {
            <tr>
            @if (Model[team][i].PlayerName == null)
            {
             <td><a href="../Home/PlayerSearch">Add Player</a></td>   
            }
            else
            {

                <td>@Model[team][i].PlayerName</td>
                <td>@Model[team][i].Points</td>
                <td>@Model[team][i].Assists</td>
                <td>@Model[team][i].Rebounds</td>
                <td>@Model[team][i].Blocks</td>
                <td>@Model[team][i].Steals</td>
                <td><a href="../Home/RemovePlayer?playerId=@Model[team][i].PlayerId">Click here to remove this player</a></td>
            }
            </tr>
        }
       
    </table>
    <a href="../Home/SetTeamNumber?teamNumber=@team.Id">Select This team to add/remove players</a>
    <a href="../Monstar/GenerateMonstars" class="badge-success">Play Game!</a>
     <a href="../Home/CreateNewTeam">Create New Team</a>
 


}
