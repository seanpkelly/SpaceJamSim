
@model PlayerStatViewModel
<table class="table table-hover table-info" style="table-layout:fixed">
    <tr>
        <td>Name</td>
        <td>Points</td>
        <td>Assists</td>
        <td>Rebounds</td>
        <td>Steals</td>
        <td>Blocks</td>
    </tr>
    @for (int i = 0; i < Model.players.Count; i++)
    {
<tr>
    <td>@Model.players[i].first_name @Model.players[i].last_name</td>
    <td>@Model.stats[i].pts</td>
    <td>@Model.stats[i].ast</td>
    <td>@Model.stats[i].reb</td>
    <td>@Model.stats[i].stl</td>
    <td>@Model.stats[i].blk</td>
</tr>}
</table>
@*<a href="../Home/PlayerList?search=@ViewBag.NextPage">Next Page</a>*@
@if (ViewBag.PreviousPage > 0)
{
<a class="align-text-sm-start" href="../Home/PlayerList?page=@ViewBag.PreviousPage&search=@ViewBag.Name">Previous Page: @ViewBag.PreviousPage</a>}
<div class="text-right">
    <a class="align-text-sm-start" href="../Home/PlayerList?page=@ViewBag.NextPage&search=@ViewBag.Name">Next Page: @ViewBag.NextPage</a>
</div>
